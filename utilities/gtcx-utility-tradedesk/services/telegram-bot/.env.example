# ============================================================================
# GCTX TELEGRAM BOT - ENVIRONMENT CONFIGURATION
# ============================================================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gctx_bot
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_SSL=false

# Redis Configuration (for session storage)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_minimum_32_characters
API_TOKEN=your_api_token_for_mobile_app_integration

# External API Integration
GEOTAG_API_URL=http://localhost:19007/api
TRADEPASS_API_URL=http://localhost:19008/api
GOVERNMENT_API_URL=http://localhost:19009/api
BLOCKCHAIN_API_URL=http://localhost:8545
MARKET_DATA_URL=https://api.metals-api.com/v1

# API Keys
METALS_API_KEY=your_metals_api_key_for_gold_prices
BLOCKCHAIN_RPC_KEY=your_blockchain_rpc_api_key

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
TRUSTED_ORIGINS=telegram.org,api.telegram.org

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
ENABLE_CONSOLE_LOGGING=true

# Ghana Specific Configuration
GHANA_TIMEZONE=Africa/Accra
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,tw,ga

# Government Integration
MINERALS_COMMISSION_API=https://api.mineralscommission.gov.gh
EPA_API_ENDPOINT=https://api.epa.gov.gh
BANK_OF_GHANA_API=https://api.bog.gov.gh

# Mobile App Integration
GEOTAG_DEEP_LINK_SCHEME=geotag://
TRADEPASS_DEEP_LINK_SCHEME=tradepass://
MOBILE_NOTIFICATION_SERVICE=https://fcm.googleapis.com/fcm/send
FCM_SERVER_KEY=your_firebase_cloud_messaging_key

# Development/Testing
NODE_ENV=development
DEBUG_MODE=false
MOCK_EXTERNAL_SERVICES=true
ENABLE_TEST_USERS=true

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
ANALYTICS_ENDPOINT=https://analytics.gctx.ghana.gov.gh
HEALTH_CHECK_INTERVAL=300000

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
UPLOAD_STORAGE_PATH=./uploads
TEMP_FILE_RETENTION_HOURS=24

# Compliance and Audit
AUDIT_LOG_RETENTION_DAYS=365
COMPLIANCE_CHECK_INTERVAL=86400000
AUTO_CLEANUP_ENABLED=true

# Backup Configuration
DATABASE_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Performance Configuration
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT_MS=30000
HTTP_TIMEOUT_MS=10000
CACHE_TTL_SECONDS=3600

# Feature Flags
ENABLE_BIOMETRIC_VERIFICATION=false
ENABLE_BLOCKCHAIN_INTEGRATION=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ADVANCED_ANALYTICS=true

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_for_validation
WEBHOOK_PORT=3000
WEBHOOK_PATH=/webhook

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# SMS Configuration (for Ghana mobile verification)
SMS_PROVIDER=mnotify
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=GCTX

# Scheduled Jobs
ENABLE_SCHEDULED_JOBS=true
SESSION_CLEANUP_CRON=0 */6 * * *
ANALYTICS_REPORT_CRON=0 0 * * *
COMPLIANCE_CHECK_CRON=0 9 * * *

# Rate Limiting per User Type
MINER_RATE_LIMIT=50
TRADER_RATE_LIMIT=100
INSPECTOR_RATE_LIMIT=200
BUYER_RATE_LIMIT=75
DEMO_RATE_LIMIT=25