# ============================================================================
# GTCX BACKEND ENVIRONMENT VARIABLES
# Copy to .env and configure for your deployment
# ============================================================================

# Database Configuration
DATABASE_URL=postgresql://gtcx:gtcx_secure_password@localhost:5432/gtcx_backend_development
DATABASE_USERNAME=gtcx
DATABASE_PASSWORD=gtcx_secure_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Rails Configuration
RAILS_ENV=development
RAILS_MAX_THREADS=5
SECRET_KEY_BASE=your_secret_key_base_here_must_be_at_least_30_characters_long

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_for_token_signing

# Ghana Government API Configuration
GHANA_MINERALS_API_URL=https://api.mineralscommission.gov.gh/v1
GHANA_MINERALS_API_KEY=your_ghana_api_key_here
GHANA_CLIENT_ID=your_client_id_here
GHANA_CLIENT_SECRET=your_client_secret_here

# Payment Processing - MTN Mobile Money
MTN_MOMO_API_URL=https://sandbox.momodeveloper.mtn.com
MTN_MOMO_API_KEY=your_mtn_api_key
MTN_MOMO_USER_ID=your_mtn_user_id
MTN_MOMO_SUBSCRIPTION_KEY=your_mtn_subscription_key

# Payment Processing - Vodafone Cash
VODAFONE_CASH_API_URL=https://developer.vodafone.com.gh/api
VODAFONE_CASH_API_KEY=your_vodafone_api_key
VODAFONE_CASH_CLIENT_ID=your_vodafone_client_id

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=gtcx-production

# Redis Configuration (for background jobs)
REDIS_URL=redis://localhost:6379/0

# SMTP Configuration (for email notifications)
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=gtcx.global
SMTP_USERNAME=notifications@gtcx.global
SMTP_PASSWORD=your_email_password

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:8082

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info

# Production SSL
FORCE_SSL=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_HOUR=1000