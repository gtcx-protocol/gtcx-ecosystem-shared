# Application Configuration
NODE_ENV=production
APP_NAME=TradePass
APP_VERSION=1.0.0
ENVIRONMENT=production

# API Configuration
API_URL=https://api.tradepass.africa
API_KEY=[TRADEPASS_API_KEY_PLACEHOLDER]
API_TIMEOUT=30000

# Security & Cryptography (CRITICAL - PRODUCTION CRYPTO REQUIRED)
ENCRYPTION_KEY=[32_CHAR_ENCRYPTION_KEY_PLACEHOLDER]
CRYPTO_PROVIDER=production
ENABLE_FIPS_140_2=true
ED25519_PRIVATE_KEY=[ED25519_PRIVATE_KEY_PLACEHOLDER]
SECP256K1_PRIVATE_KEY=[SECP256K1_PRIVATE_KEY_PLACEHOLDER]
RSA_PRIVATE_KEY=[RSA_PRIVATE_KEY_PLACEHOLDER]

# Biometric Security
BIOMETRIC_ENABLED=true
LIVENESS_DETECTION=true
ANTI_SPOOFING_ENABLED=true
BIOMETRIC_FAR_THRESHOLD=0.01
BIOMETRIC_FRR_THRESHOLD=1.0
TEMPLATE_ENCRYPTION=true

# Document Verification
DOCUMENT_VERIFICATION_ENABLED=true
DOCUMENT_CONFIDENCE_THRESHOLD=95
TAMPER_DETECTION_ENABLED=true
OCR_CONFIDENCE_THRESHOLD=90

# Government Integration
GHANA_PASSPORT_API_URL=https://api.immigration.gov.gh/passport/v1
GHANA_PASSPORT_API_KEY=[PASSPORT_API_KEY_PLACEHOLDER]

GHANA_VOTERS_ID_API_URL=https://api.ec.gov.gh/voters/v1
GHANA_VOTERS_ID_API_KEY=[VOTERS_ID_API_KEY_PLACEHOLDER]

GHANA_DRIVERS_LICENSE_API_URL=https://api.dvla.gov.gh/license/v1
GHANA_DRIVERS_LICENSE_API_KEY=[DRIVERS_LICENSE_API_KEY_PLACEHOLDER]

# Cross-Border Verification
ECOWAS_ID_VERIFICATION_URL=https://api.ecowas.int/identity/v1
ECOWAS_API_KEY=[ECOWAS_API_KEY_PLACEHOLDER]

# KYC/AML Services
KYC_PROVIDER=jumio
JUMIO_API_URL=https://api.jumio.com/v1
JUMIO_API_TOKEN=[JUMIO_API_TOKEN_PLACEHOLDER]
JUMIO_API_SECRET=[JUMIO_API_SECRET_PLACEHOLDER]

AML_PROVIDER=worldcheck
WORLDCHECK_API_URL=https://api.worldcheck.com/v1
WORLDCHECK_API_KEY=[WORLDCHECK_API_KEY_PLACEHOLDER]

# Authentication
JWT_SECRET=[JWT_SECRET_PLACEHOLDER]
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d
SESSION_TIMEOUT=3600000
MFA_ENABLED=true

# Cross-App Integration
GEOTAG_API_URL=https://api.geotag.africa
TRADEDESK_API_URL=https://api.tradedesk.africa
SHARED_SECRET=[SHARED_SECRET_PLACEHOLDER]

# Performance & Security
PERFORMANCE_MONITORING=true
SECURITY_MONITORING=true
AUDIT_LOGGING=true
RATE_LIMITING=true
RATE_LIMIT_PER_HOUR=1000

# Storage & Backup
SECURE_STORAGE_PROVIDER=aws-kms
AWS_KMS_KEY_ID=[AWS_KMS_KEY_ID_PLACEHOLDER]
BACKUP_ENCRYPTION=true
BACKUP_RETENTION_DAYS=90

# Compliance
GDPR_COMPLIANCE=true
SOC2_COMPLIANCE=true
ISO27001_COMPLIANCE=true
FIPS_140_2_COMPLIANCE=true
DATA_RESIDENCY=ghana

# Monitoring
SENTRY_DSN=[TRADEPASS_SENTRY_DSN_PLACEHOLDER]
NEW_RELIC_LICENSE_KEY=[NEW_RELIC_KEY_PLACEHOLDER]
HEALTH_CHECK_ENABLED=true

# Feature Flags
FEATURE_BIOMETRIC_AUTH=true
FEATURE_DOCUMENT_VERIFICATION=true
FEATURE_GOVERNMENT_INTEGRATION=true
FEATURE_CROSS_BORDER_VERIFICATION=false
FEATURE_BLOCKCHAIN_IDENTITY=false