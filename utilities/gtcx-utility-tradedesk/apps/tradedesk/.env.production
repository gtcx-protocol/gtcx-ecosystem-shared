# Application Configuration
NODE_ENV=production
APP_NAME=TradeDesk
APP_VERSION=1.0.0
ENVIRONMENT=production

# API Configuration
API_URL=https://api.tradedesk.africa
API_KEY=[TRADEDESK_API_KEY_PLACEHOLDER]
API_TIMEOUT=30000

# Trading APIs
LBMA_API_URL=https://api.lbma.org.uk/v1
LBMA_API_KEY=[LBMA_API_KEY_PLACEHOLDER]

COMEX_API_URL=https://api.cmegroup.com/v1
COMEX_API_KEY=[COMEX_API_KEY_PLACEHOLDER]

GHANA_COMMODITY_EXCHANGE_URL=https://api.gce.com.gh/v1
GCE_API_KEY=[GCE_API_KEY_PLACEHOLDER]

# Market Data Providers
REUTERS_API_URL=https://api.refinitiv.com/v1
REUTERS_API_KEY=[REUTERS_API_KEY_PLACEHOLDER]

BLOOMBERG_API_URL=https://api.bloomberg.com/v1
BLOOMBERG_API_KEY=[BLOOMBERG_API_KEY_PLACEHOLDER]

# Payment & Settlement
SWIFT_NETWORK_URL=https://api.swift.com/v1
SWIFT_BIC_CODE=[SWIFT_BIC_CODE_PLACEHOLDER]
SWIFT_API_KEY=[SWIFT_API_KEY_PLACEHOLDER]

# Escrow Services
ESCROW_PROVIDER=ghana_commercial_bank
GCB_ESCROW_API_URL=https://api.gcb.com.gh/escrow/v1
GCB_API_KEY=[GCB_API_KEY_PLACEHOLDER]

# Compliance & Regulatory
GHANA_SEC_API_URL=https://api.sec.gov.gh/v1
GHANA_SEC_API_KEY=[SEC_API_KEY_PLACEHOLDER]

BANK_OF_GHANA_API_URL=https://api.bog.gov.gh/v1
BOG_API_KEY=[BOG_API_KEY_PLACEHOLDER]

# Risk Management
RISK_ENGINE_URL=https://risk.tradedesk.africa
RISK_API_KEY=[RISK_API_KEY_PLACEHOLDER]
MAX_POSITION_SIZE=1000000
MAX_DAILY_VOLUME=10000000
VAR_LIMIT=100000

# Authentication & Authorization
JWT_SECRET=[TRADEDESK_JWT_SECRET_PLACEHOLDER]
TRADING_SESSION_TIMEOUT=1800000
ADMIN_SESSION_TIMEOUT=3600000

# Cross-App Integration
GEOTAG_API_URL=https://api.geotag.africa
TRADEPASS_API_URL=https://api.tradepass.africa
SHARED_SECRET=[SHARED_SECRET_PLACEHOLDER]

# Real-time Data
WEBSOCKET_URL=wss://ws.tradedesk.africa
REDIS_URL=redis://redis.tradedesk.africa:6379
ENABLE_REAL_TIME_QUOTES=true
QUOTE_UPDATE_INTERVAL=1000

# Storage & Database
DATABASE_URL=postgresql://tradedesk:secure_password@db.tradedesk.africa:5432/tradedesk_production
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000

# File Storage
FILE_STORAGE_PROVIDER=aws_s3
S3_BUCKET=tradedesk-production
S3_REGION=af-south-1
CDN_URL=https://cdn.tradedesk.africa

# Monitoring & Analytics
SENTRY_DSN=[TRADEDESK_SENTRY_DSN_PLACEHOLDER]
NEW_RELIC_LICENSE_KEY=[NEW_RELIC_KEY_PLACEHOLDER]
ANALYTICS_ENABLED=true
TRADE_ANALYTICS_KEY=[TRADE_ANALYTICS_KEY_PLACEHOLDER]

# Performance
CACHE_TTL=300
RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=1000
CONNECTION_POOLING=true

# Security
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true
AUDIT_LOGGING=true
TRADE_AUDIT_RETENTION_YEARS=7

# Feature Flags
FEATURE_ALGORITHMIC_TRADING=false
FEATURE_OPTIONS_TRADING=false
FEATURE_FUTURES_TRADING=true
FEATURE_SPOT_TRADING=true
FEATURE_MARGIN_TRADING=false